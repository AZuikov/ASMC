<Application x:Class="ASMC.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui1="clr-namespace:ASMC.Common.UI;assembly=ASMC.Common"
             xmlns:ui="clr-namespace:ASMC.Core.UI;assembly=ASMC.Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml"/>
      </ResourceDictionary.MergedDictionaries>
            <ui:WindowService x:Key="DefaultWindowService"
                              WindowStartupLocation="CenterScreen"
                              WindowShowMode="Default"
                              Title="ASMC"
                              SizeToContent="WidthAndHeight">

                <!--<dxmvvm:WindowService.SettingsSelector>
                    <asmc:ViewSettingsSelector />
                </dxmvvm:WindowService.SettingsSelector>-->
            </ui:WindowService>

            <ui:WindowService x:Key="FreeWindow" WindowShowMode="Dialog" SizeToContent="WidthAndHeight"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
