<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
  </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.2" />
    </startup>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd" autoReload="false" throwExceptions="false" internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
    <targets>
      <target xsi:type="File"  maxArchiveFiles="5" archiveEvery="Hour" name="logDebug" 
			  fileName="${specialfolder:folder=ApplicationData}\ASMC\logs\Debug\${shortdate}.log" layout="[${longdate}] ${processname} ${processid} ${level} ${logger} ${message}" />
	  <target xsi:type="File"  maxArchiveFiles="14" archiveEvery="Day" name="logWarn"
			  fileName="${specialfolder:folder=ApplicationData}\ASMC\logs\Error\${shortdate}.log" layout="[${longdate}] ${processname} ${processid} ${level} ${logger} ${message}" />
	  <target xsi:type="File"  maxArchiveFiles="7" archiveEvery="Day" name="logInfo"
			  fileName="${specialfolder:folder=ApplicationData}\ASMC\logs\${shortdate}.log" layout="[${longdate}] ${processname} ${processid} ${level} ${logger} ${message}" />
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="logDebug" />
	  <logger name="*" minlevel="Warn" writeTo="logWarn" />
	  <logger name="*" minlevel="Info"  writeTo="logInfo" />
    </rules>
  </nlog>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="DocumentFormat.OpenXml" publicKeyToken="8fb06cb64d019a17" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-2.9.1.0" newVersion="2.9.1.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="System.Windows.Interactivity" publicKeyToken="31bf3856ad364e35" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-4.0.0.0" newVersion="4.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
