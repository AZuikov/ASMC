<UserControl x:Class="ASMC.Devices.UInterface.RemoveDevice.View.WebCamView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ASMC.Devices.UInterface.RemoveDevice.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Grid>
            <Image Source="{Binding VideoSourse}" Stretch="Fill"  Height="450" Width="800" />
        </Grid>
        <Button Command="{Binding PropertyWebCamShowCommand}" Content="Настройки" Width="100" Height="50"/>
    </StackPanel>
</UserControl>
