<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="DefaultLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource LabelForegroundBrush}" />
        <Setter Property="Margin" Value="3 1 10 1" />

        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.25" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="GreenLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource LabelForegroundBrush}" />
        <Setter Property="Margin" Value="3 0" />
    </Style>

    <Style x:Key="MainInstructionLabelStyle" TargetType="Label">
        <Setter Property="Foreground" Value="{DynamicResource MainInstructionLabelForegroundBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource MainInstructionFontSize}" />
        <Setter Property="Margin" Value="0 0 0 10" />
    </Style>

    <Style x:Key="DescriptionLabelStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource DescriptionFontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource DescriptionLabelForegroundBrush}" />
    </Style>

</ResourceDictionary>